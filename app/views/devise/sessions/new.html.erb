<!--Login Page-->
<head>

<style>

.background {
    margin-top: -15vh;
    width: 100vw;
    height: 100vh;
    background-image: linear-gradient(124deg, #b8b1b9, #d3bc93), url('bg.png');
    background-size: cover;
    background-blend-mode: hard-light;
}

</style>

</head>


<body>

<div class="background">

<div class="admit_bg">
  <div class="admit_container">
  <div class="admit_title">늘어진<br>카세트<br>테이프</div>
  <div class="admit_logo">
    <!-- <%= image_tag "logo.png", class:"login_logo"%> -->
  </div>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login" %>
  </div>
<% end %>

<div class="go_register">
  Don't have an account?
  <%= link_to 'Register', "/devise/registrations/new", class: "login_register" %>
</div>

<%= render "devise/shared/links" %>

</div>
</div>


</div>
</body>
