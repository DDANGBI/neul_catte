<div class="tape_form_container">

  <%= form_for "/tapes/new" do |f| %>

  <div class="tape_title_container">
    <%= f.label :제목, class: "title" %>
    <div class="input_title">
      <%= f.text_field :tape_title, class: "form-control", placeholder: "제목을 작성해주세요" %>
    </div>
  </div>

  <div class="tape_img_container">
    <%= f.label :커버이미지, class: "tape_img" %>
    <br>
    <div class="input_img">
    <%= f.file_field :img, class: 'img_up', value: "이미지를 등록해주세요" %>
    </div>
  </div>

  <div class="tape_filter_container">
    필터
    <%= f.check_box :multiply %>
    <br>

  </div>

  <div class="tape_music_container">
    <label for="tape_music">
      트랙
      <br>
    </label>
  </div>
  <hr>

  <div class="tape_record">
    <div class="tape_a">

      <label for="side_a">
        사이드 A
        <br>
        <div class="a_list_container">
          <input class="record_a" name="record_a" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_a" name="record_a" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_a" name="record_a" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_a" name="record_a" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_a" name="record_a" type="text" placeholder="곡을 녹음해주세요">
        </div>
      </label>
    </div>

    <div class="tape_b">
      <label for="side_b">
        사이드 B
        <br>
        <div class="b_list_container">
          <input class="record_b" name="record_b" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_b" name="record_b" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_b" name="record_b" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_b" name="record_b" type="text" placeholder="곡을 녹음해주세요">
          <input class="record_b" name="record_b" type="text" placeholder="곡을 녹음해주세요">
        </div>
      </label>
    </div>
  </div>

  <button type="preview">
    미리보기
  </button>
  <!-- preview (if needed) -->
  <button type="submit" value="save">
    저장
  </button>

<% end %>

</div>
